<div class="collapse navbar-collapse" id="rebound-navbar-collapse">
<h3>Forgot your password?</h3>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="controls"><%= f.label :email %></div>
  <div class="controls"><%= f.email_field :email, autofocus: true %></div>
  <br>
  <div><%= f.submit "Send me reset password instructions", :class => "btn btn-inverse" %></div>
<% end %>
</div>
<%= render "devise/shared/links" %>
