<%= form_for @contact, url: {action: "create"} do |f| %>
  
  <div class="controls"><%= f.label :first_name %></div>
  <div class="controls"><%= f.text_field :first_name, autofocus: true, :class => "form-control" %></div>
  
  <div class="controls"><%= f.label :last_name %></div>
  <div class="controls"><%= f.text_field :last_name, :class => "form-control" %></div>

  <div class="controls"><%= f.label :nick_name %></div>
  <div class="controls"><%= f.text_field :nick_name, :class => "form-control" %></div>

  <div class="controls"><%= f.label :email %></div>
  <div class="controls"><%= f.email_field :email, :class => "form-control" %></div>

  <div class="controls"><%= f.label :phone_number %></div>
  <div class="controls"><%= f.telephone_field :phone_number, :class => "form-control" %></div>

  <div class="controls"><%= f.label :birthday %></div>
  <div class="controls"><%= f.date_field :birthday, :class => "form-control" %></div>
  
  <br>
  <%= f.submit "Create New Friend", :class => "btn btn-default" %>
  <%= link_to "Back", user_path(@user), :class => "btn btn-purple" %>

<% end %>

